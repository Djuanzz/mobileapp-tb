<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/secondcolor"
    tools:context=".KeluhanActivity">

    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Klik keluhan yang anda alami, jika keluhan bertambah parah hubungi dokter atau segera ke faskes terdekat"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="8dp" />

    <!-- Contoh Button untuk gejala -->
    <Button
        android:id="@+id/btn_batuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batuk-batuk"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@id/instruction_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_mual"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_mual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mual dan muntah"
        app:layout_constraintTop_toBottomOf="@id/instruction_text"
        app:layout_constraintStart_toEndOf="@id/btn_batuk"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_ruam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruam di kulit"
        app:layout_constraintTop_toBottomOf="@id/instruction_text"
        app:layout_constraintStart_toEndOf="@id/btn_mual"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_demam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demam"
        app:layout_constraintTop_toBottomOf="@id/btn_batuk"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_gatal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kulit gatal"
        app:layout_constraintTop_toBottomOf="@id/btn_batuk"
        app:layout_constraintStart_toEndOf="@id/btn_demam"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_tidaknafsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak nafsu makan"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@id/btn_batuk"
        app:layout_constraintStart_toEndOf="@id/btn_gatal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <!-- Tambahkan elemen UI lainnya dengan cara serupa -->


    <Button
        android:id="@+id/btn_kabur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penglihatan kabur"
        app:layout_constraintTop_toBottomOf="@id/btn_demam"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_nyeri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nyeri perut di bagian kanan atas"
        app:layout_constraintTop_toBottomOf="@id/btn_demam"
        app:layout_constraintStart_toEndOf="@id/btn_kabur"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_keringat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keringat di malam hari"
        app:layout_constraintTop_toBottomOf="@id/btn_kabur"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_depresi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depresi selama pengobatan"
        app:layout_constraintTop_toBottomOf="@id/btn_kabur"
        app:layout_constraintStart_toEndOf="@id/btn_keringat"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_kesemutan"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text="Kesemutan di tangan atau kaki selama beberapa hari"
        app:layout_constraintTop_toBottomOf="@id/btn_keringat"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_punggung"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text="Nyeri pada punggung bagian bawah"
        app:layout_constraintTop_toBottomOf="@id/btn_kesemutan"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_urine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urine berwarna gelap"
        app:layout_constraintTop_toBottomOf="@id/btn_depresi"
        app:layout_constraintStart_toEndOf="@id/btn_kesemutan"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_pendengaran"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Pendengaran terganggu selama beberapa hari"
        app:layout_constraintTop_toBottomOf="@id/btn_urine"
        app:layout_constraintStart_toEndOf="@id/btn_kesemutan"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />


    <Button
        android:id="@+id/btn_kirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim ke dokter"
        app:layout_constraintTop_toBottomOf="@id/btn_punggung"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/btncolor"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apakah gejala yang tertera bukan termasuk gejala yang anda alami?"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btn_kirim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/footer_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="disini"
        android:textColor="@color/btncolor"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/footer_text"
        app:layout_constraintStart_toStartOf="@id/footer_text"
        android:layout_marginTop="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
